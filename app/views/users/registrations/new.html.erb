<div class="container">
  <div class="row">
    <div class="col-sm-3 m-2"></div>
    <div class="col-sm-4 m-2">
      <div class="signup border">
        <h2 class="p-2">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field p-2">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :size => 40 %>
          </div>

          <div class="field p-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 40 %>
          </div>

          <div class="field p-2">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", :size => 40 %>
          </div>

          <div class="field p-2">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => 40 %>
          </div>

          <div class="actions p-2">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
    <div class="col-sm-3 m-2"></div>
  </div>
</div>


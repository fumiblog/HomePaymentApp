<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 text-center border m-2 p-2">
      <h4>家計簿</h4>
      <%= image_tag 'us50c_表.png', class: "footprint-img rounded-circle border", size: "100x100" %>
      <div class="details-make">
        <%= form_with model: @detail, url: users_details_path(@detail), local: true do |f| %>
          <table class="table-striped">
            <div class="thead">
              <tr>
                <th>日 時　</th>
                <th><%= f.date_field :day %>　</th>
                <th>カテゴリ　</th>
                <th>
                  <%= @detail.find(:category_id => params[:category_id]).category.name %>
                  <%= f.hidden_field :category_id, :value => params[:category_id] %>
                </th>
              </tr>
            </div>
          </table>
        <% end %>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
